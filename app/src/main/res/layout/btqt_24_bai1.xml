<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCallActivityUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btqt_24_bai1_buttondesign"
            android:padding="10dp"
            android:text="Call activity user"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.323" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCallCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btqt_24_bai1_buttondesign"
            android:padding="10dp"
            android:text="Call Camera"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnCallActivityUser"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCallQR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btqt_24_bai1_buttondesign"
            android:padding="10dp"
            android:text="Call QR Scanner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnCallCamera"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCallEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btqt_24_bai1_buttondesign"
            android:padding="10dp"
            android:text="Call Email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnCallQR"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCallContacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btqt_24_bai1_buttondesign"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="Call Contacts"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnCallEmail"/>
</androidx.constraintlayout.widget.ConstraintLayout>